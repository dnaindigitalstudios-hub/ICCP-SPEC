{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://iccp.dev/schema/v1.0/action_request.json",
  "title": "ICCP ActionRequest",
  "type": "object",
  "required": ["id", "source_service", "resource", "action", "payload", "timestamp"],
  "properties": {
    "id": { "type": "string", "format": "uuid" },
    "source_service": { "type": "string" },
    "resource": { "type": "string" },
    "action": { "type": "string", "enum": ["GIT_PUSH", "GIT_PULL", "READ_FILE", "NEGOTIATE"] },
    "payload": { "type": "object" },
    "timestamp": { "type": "integer" }
  }
}
