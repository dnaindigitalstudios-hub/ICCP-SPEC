{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://iccp.dev/schema/v1.0/decision.json",
  "title": "ICCP Decision",
  "type": "object",
  "required": ["request_id", "status", "message", "timestamp"],
  "properties": {
    "request_id": { "type": "string", "format": "uuid" },
    "status": { "type": "string", "enum": ["ALLOW", "DENY"] },
    "message": { "type": "string" },
    "timestamp": { "type": "integer" }
  }
}
